@model IEnumerable<SalesSystem.Utilities.Client>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-controller="ClientController" asp-action="Create" class="btn effect01 m-2"><i class="fa-solid fa-user-plus"></i> Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Código
            </th>
            <th>
                DNI
            </th>
            <th>
                Nombre
            </th>
            <th>
                I Apellido
            </th>
            <th>
                II Apellido
            </th>
            <th>
                Correo
            </th>
            <th>
                Nacimiento
            </th>
            <th>
                Celular
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @{
           int line = 1; 
        }
        @foreach (var item in Model) {
        <tr>
            <td>
                @line
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-controller="ClientController" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa-solid fa-user-pen"></i></a>
                <a asp-controller="ClientController" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-address-card"></i></a>
                <a asp-controller="ClientController" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-user-xmark"></i></a>
            </td>
        </tr>
            line++;
}
    </tbody>
</table>
